{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
